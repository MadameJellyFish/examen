{% block body %}
	<link rel="stylesheet" href={{asset('assets/css/contact.css')}}>

	<div class="containerContact d-md-flex">
		<section class="col-md-5 ms-md-5 text-center text-md-start ms-5 d-md-flex justify-content-end">
			<div class="col-md-9 mt-5 me-5">
				<hr class="d-md-none d-block mb-5">
				<h2>
					Je m'informe
				</h2>

				<p>
					Nous contacter par téléphone
				</p>
				<span>+ 02 52 56 06 21</span>

				<p>
					Lundi au Jeudi : 9h00 à 18h30
				</p>
				<p>
					Vendredi : 9h00 à 17h30
				</p>
				<p>
					Samedi : 9h30 à 12h30
				</p>

				<div class="reseauxsocial justify-content-center justify-content-md-start mb-5">
					<a href="#"><i class="fa-brands fa-facebook"></i></a>
					<a href="#"><i class="fa-brands fa-instagram"></i></a>
					<a href="#"><i class="fa-brands fa-twitter"></i></a>
				</div>
			</div>
		</section>

		<section class="containerContactForm col-md-5 my-5 mx-5 d-md-flex justify-content-end">
			<div class="box col-12">
				<h1>Contactez-nous
				</h1>

				<form action="/contact" method:'post'>

					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{message}}
						</div>
					{% endfor %}


					<div class="form-group">
						<label for="nom ">Nom :</label>
						<input class="col-sm-2 col-form-label inputStyle inputClassic" name="nom" id="nom" type="text" value=""/>

						{% if errors.nom is defined %}
							<div class="text-danger">{{errors.nom}}</div>
						{% endif %}
					</div>

					<div class="form-group">
						<label for="email">
							Email :</label>
						<input class="col-sm-2 col-form-label inputStyle inputClassic" name="email" id="email" type="text" value=""/>
						{% if errors.email is defined %}
							<div class="text-danger">{{errors.email}}</div>
						{% endif %}
					</div>

					<div class="form-group">
						<label for="message">Message :</label>
						<textarea class="col-sm-2 col-form-label inputStyle inputGrand" id="message" name="message" value="" style="height: 12rem"></textarea>
						{% if errors.message is defined %}
							<div class="text-danger">{{errors.message}}</div>
						{% endif %}

					</div>

					<button class="btnPurple col-12 col-md-4" id="submitButton" name='submit' type="submit">
						Connexion</button>
				</form>
			</div>
		</section>
	</div>
{% endblock %}
