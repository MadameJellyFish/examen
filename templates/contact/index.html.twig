{% extends 'base.html.twig' %}

{% block title %}
	Contact
{% endblock %}

{% block banniere_text %}
	CONTACT - CONTACT - CONTACT - CONTACT - CONTACT - CONTACT -
{% endblock %}

{% block body %}
	<section>
		<h2>
			Je m'informe
		</h2>

		<p>
			Nous contacter par téléphone
		</p>
		<span>+ 02 52 56 06 21</span>

		<p>
			Lundi au Jeudi : 9h00 à 18h30
		</p>
		<p>
			Vendredi : 9h00 à 17h30
		</p>
		<p>
			Samedi : 9h30 à 12h30
		</p>

		<div class="reseauxsocial">
			<i class="fa-brands fa-facebook"></i>
			<i class="fa-brands fa-instagram"></i>
			<i class="fa-brands fa-twitter"></i>
		</div>
	</section>

	<section>
		<h2>
			Contactez-nous
		</h2>

		<form action="/contact" method:'post'>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}


			<div class="form-group">
				<label for="nom">Nom :</label>
				<input class="col-sm-2 col-form-label" name="nom" id="nom" type="text" value=""/>

				{% if errors.nom is defined %}
					<div class="text-danger">{{errors.nom}}</div>
				{% endif %}
			</div>

			<div class="form-group">
				<label for="email">
					Email :</label>
				<input class="col-sm-2 col-form-label" name="email" id="email" type="text" value=""/>
				{% if errors.email is defined %}
					<div class="text-danger">{{errors.email}}</div>
				{% endif %}
			</div>

			<div class="form-group">
				<label for="message">Message</label>
				<textarea class="col-sm-2 col-form-label" id="message" name="message" value="" style="height: 12rem"></textarea>
				{% if errors.message is defined %}
					<div class="text-danger">{{errors.message}}</div>
				{% endif %}

			</div>

			<button class="btn btn-secondary" id="submitButton" name='submit' type="submit">
				Connexion</button>
		</form>
	</section>
{% endblock %}
