{% extends 'base.html.twig' %}

{% block title %}
  Profil de {{ user.prenom }} {{ user.nom }}
{% endblock %}

{% block banniere_text %}
  {{ user.prenom }} {{ user.nom }}
{% endblock %}

{% block body %}
  {% for message in app.flashes('message') %}
    <p>
      {{ message }}
    </p>
  {% endfor %}
  <input type="text" value="{{ user.prenom }} {{ user.nom }}" disabled />
  <p>
    {{ user.date|date('m/d/Y') }} <br />
    {{ user.email }} <br />
    {{ user.telephone }}

    {% if user.online == true %}
      <small>is online</small>
    {% else %}
      <small>is offline</small>
    {% endif %}
  </p>

  <style>
    a { color: white; text-decoration: none; }
  </style>
  <a href="{{ path('app_edit_profil') }}" id="modif_link" data-true="0">
    Modifier mes informations
  </a>
  <a href="{{ path('app_edit_password') }}">Modifier mon mot de passe</a>
  <a href="{{ path('app_delete') }}">Supprimer mon profil</a>

  <div>
    {% for examen in examToCome %}
      <p>
        {{ examen.competence.nom }} <br />
        {{ examen.date|date('d/m/Y') }} <br />
        {{ examen.ville }}
      </p>
    {% endfor %}
  </div>

  <div>
    {% for examen in examPassed %}
      <p>
        {{ examen.competence.nom }} <br />
        {{ examen.date|date('d/m/Y') }} <br />
        {{ examen.ville }}
      </p>
    {% endfor %}
  </div>

  <script src={{asset('assets/js/profil.js')}}></script>
{% endblock %}
