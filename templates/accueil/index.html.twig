{% extends 'base.html.twig' %}

{% block title %}
	Accueil!
{% endblock %}


{% block banniere_text %}
	ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL -
{% endblock %}

{% block body %}

	<link rel="stylesheet" href={{ asset('assets/css/accueil.css') }}>
	<link rel="stylesheet" href={{ asset('assets/css/competence.css') }}>
	<link rel="stylesheet" href={{ asset('assets/css/faq.css') }}>

	<section class="main-container">
		<h1>Offre des comp√©tences</h1>

		{% for message in app.flashes('erreur') %}
			<div class='alert-success' role="alert">
				{{ message }}
			</div>
		{% endfor %}


		<div class="layout-accueil">
			{% for examen in examens|sort((a, b) => a.date > b.date) %}
				<div class="question-box mb-5 mt-5">

						<div class="title-comp">
							<h2 class="h2-accueil">{{ examen.competence.nom }}</h2>
							<i class="fa-sharp fa-solid fa-display picto-accueil"></i>
						</div>
						<p class="contenu-accueil mt-4 mb-4">
							{{ examen.competence.description }}
						</p>
					<a href="{{ path('competence.show', { id: examen.competence.id }) }}" class="box-comp">
						<button class="btnMore">Plus d'informations</button>
					</a>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
