{% extends 'base.html.twig' %}

{% block title %}
	Accueil!
{% endblock %}

{% block header %}
	<header>
		<!-- header -->
		<div id="header-wrapper" class="d-none d-md-flex d-lg-flex text-start align-md-middle">
			<div class="container-fluid text-center">
				<div class="align-items-center">
					<div class="text-white text-center">
						<h1 class="header-title">Un slogan d'accroche pour le centre d'examen</h1>
						<div id="title">
							<a href="{{ path('app_accueil') }}">
								<p class="title-left">Centre</p>
								<p class="title-right">examen</p>
							</a>
						</div>
						<!-- Navbar -->
						<nav class="navbar d-flex">
							<ul class="navbar-left d-flex">
								<li class="nav-link">
									<a href="{{ path('app_competence') }}">Toutes les compétences</a>
								</li>
								<li class="nav-link ">
									<a href="{{ path('app_contact') }}">Contact</a>
								</li>
							</ul>
							<ul class="navbar-right d-flex">
								{% if app.user %}
									<li class="nav-link">
										<a href="{{ path('app_profil') }}">Mon profil</a>
									</li>
									<li class="nav-link">
										<a href="{{ path('app_logout') }}">Déconnexion</a>
									</li>
								{% else %}
									<li class="nav-link">
										<a href="{{ path('app_login') }}">Connexion</a>
									</li>
									<li class="nav-link">
										<a href="{{ path('app_register') }}">Inscription</a>
									</li>
								{% endif %}
							</ul>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}

{% block banniere_text %}
	ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL - ACCUEIL -
{% endblock %}

{% block body %}

	<link rel="stylesheet" href={{ asset('assets/css/accueil.css') }}>
	<link rel="stylesheet" href={{ asset('assets/css/competence.css') }}>
	<link rel="stylesheet" href={{ asset('assets/css/faq.css') }}>

	<section class="main-container">
		<h1>Offre des compétences</h1>

		{% for message in app.flashes('erreur') %}
			<div class='alert-success' role="alert">
				{{ message }}
			</div>
		{% endfor %}


		<div class="layout-accueil">
			{% for examen in examens|sort((a, b) => a.date > b.date) %}
				<div class="question-box mb-5 mt-5">

						<div class="title-comp">
							<h2 class="h2-accueil">{{ examen.competence.nom }}</h2>
							<i class="fa-sharp fa-solid fa-display picto-accueil"></i>
						</div>
						<p class="contenu-accueil mt-4 mb-4">
							{{ examen.competence.description }}
						</p>
					<a href="{{ path('competence.show', { id: examen.competence.id }) }}" class="box-comp">
						<button class="btnMore">Plus d'informations</button>
					</a>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
